mkdir /usr/local/logs
mkdir /usr/local/etc/nginx/servers

echo "
#user  nobody;
worker_processes  1;

#error_log  logs/error.log;
#error_log  logs/error.log  notice;
#error_log  logs/error.log  info;

#pid        logs/nginx.pid;


events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  application/octet-stream;

    log_format  main  '\$remote_addr - \$remote_user [\$time_local] "\$request" '
                      '\$status $body_bytes_sent "\$http_referer" '
                      '"\$http_user_agent" "\$http_x_forwarded_for"';

    access_log  /usr/local/logs/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    include servers/*.conf;
}
" > /usr/local/etc/nginx/nginx.conf


echo "
server {
  listen 80;
 	server_name *.dev *.xip.io;
	location / {
		proxy_set_header Host \$host;
		proxy_set_header X-Real-IP \$remote_addr;
		proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
		proxy_redirect off;
		proxy_pass http://localhost:20559; # The real pow port
	}
}" > /usr/local/etc/nginx/servers/zzzz-pow-xip.conf

mkdir /usr/local/etc/nginx/ssl
echo "please run the following commands to generate self signed ssl keys
openssl genrsa -des3 -out /usr/local/etc/nginx/ssl/nixcraft.in.key 1024
openssl req -new -key /usr/local/etc/nginx/ssl/nixcraft.in.key -out /usr/local/etc/nginx/ssl/nixcraft.in.csr
openssl rsa -in /usr/local/etc/nginx/ssl/nixcraft.in.key.bak -out /usr/local/etc/nginx/ssl/nixcraft.in.key
openssl x509 -req -days 365 -in /usr/local/etc/nginx/ssl/nixcraft.in.csr -signkey /usr/local/etc/nginx/ssl/nixcraft.in.key -out /usr/local/etc/nginx/ssl/nixcraft.in.crt
"
